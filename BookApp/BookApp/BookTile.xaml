<Border x:Class="BookApp.BookTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookApp"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50"
             MinHeight="50" MinWidth="50" CornerRadius="15"
             BorderBrush="Black" BorderThickness="2"
             Background="Orange">
    <Viewbox>
        <StackPanel Margin="5">
            <Image MinHeight="15" MinWidth="15" MaxHeight="15" MaxWidth="15" Source="https://baconmockup.com/50/50/"/>
            <TextBlock Text="Title" FontSize="8" HorizontalAlignment="Center"/>
            <TextBlock Text="Author" FontSize="6" HorizontalAlignment="Center"/>
        </StackPanel>
    </Viewbox>
</Border>
