<Window x:Class="BookApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="416"
        Loaded="Window_Loaded">
    <Grid>
        <ListBox x:Name="listBoxBooks"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <!--WrapPanel/-->
                    <UniformGrid Columns="3"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:BookTile Height="100" Width="100"
                                    Title="{Binding Title,Mode=TwoWay}"
                                    Author="{Binding Author,Mode=TwoWay}"
                                    ImageURL="{Binding ImageURL,Mode=TwoWay}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
