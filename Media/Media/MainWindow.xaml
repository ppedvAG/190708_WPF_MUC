<Window x:Class="Media.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Media"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="buttonKlickMich" Content="Klick mich !" Click="ButtonKlickMich_Click" HorizontalAlignment="Left" Margin="18,19,0,0" VerticalAlignment="Top" Width="75"/>
        <MediaElement x:Name="mediaElement" HorizontalAlignment="Left" Height="146" Margin="18,55,0,0" VerticalAlignment="Top" Width="204"/>
        <Button x:Name="buttonMediaElementStart" Content="Start !" Click="ButtonMediaElementStart_Click" HorizontalAlignment="Left" Margin="18,206,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="textBoxSpeech" AcceptsReturn="True" AcceptsTab="True" HorizontalAlignment="Left" Height="97" Margin="244,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <Button x:Name="buttonSpeak" Content="Speak !" Click="ButtonSpeak_Click" HorizontalAlignment="Left" Margin="244,117,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
