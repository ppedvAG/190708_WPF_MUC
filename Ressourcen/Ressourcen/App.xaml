<Application x:Class="Ressourcen.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Ressourcen"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="cooleFarbe" Color="MediumVioletRed"/>
        <Style TargetType="Button" x:Key="greenButtonStyle">
            <Setter Property="Background" Value="SeaGreen"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
        </Style>
        <Style TargetType="Button" x:Key="redButtonStyle">
            <Setter Property="Background" Value="{StaticResource cooleFarbe}"/>
            <Setter Property="Foreground" Value="PaleVioletRed"/>
            <Setter Property="FontFamily" Value="Impact"/>
        </Style>
        
        <Style TargetType="Button" x:Key="DefaultButtonStyle">
        </Style>

    </Application.Resources>
</Application>
